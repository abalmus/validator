{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2016",
      "dom"
    ],
    "noImplicitAny": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules", "src/__tests__"
  ]
}
